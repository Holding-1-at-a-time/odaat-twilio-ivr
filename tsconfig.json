{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6", "es2016.array.include", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "build",
    "config"
  ],
  "include": ["typings/index.d.ts", "lib/**/*", "test/**/*"]
}
